        android:roundIcon="@drawable/bzhan"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        tools:targetApi="31">
        <activity
            android:name=".MeActivity"
            android:exported="false"
            android:label="@string/title_activity_me"
